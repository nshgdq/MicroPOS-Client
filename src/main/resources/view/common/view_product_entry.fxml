<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="ow.micropos.client.desktop.presenter.common.ViewProductEntry"
          xmlns="http://javafx.com/javafx/8.0.40"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:id="gpParent"
          id="productEntryView">

    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints/>
    </rowConstraints>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints/>
    </columnConstraints>

    <StackPane id="lblPeMenuItemWrapper"
               GridPane.rowIndex="0"
               GridPane.columnIndex="0">
        <Label fx:id="lblMenuItem"
               styleClass="tertiary-info"/>
    </StackPane>

    <Label fx:id="lblTotal"
           styleClass="tertiary-info"
           GridPane.rowIndex="0"
           GridPane.columnIndex="1"/>

    <Label fx:id="lblModifiers"
           id="lblModifiers"
           styleClass="tertiary-info"
           GridPane.rowIndex="1"
           GridPane.columnIndex="0"
           GridPane.columnSpan="2"/>

</GridPane>