<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="ow.micropos.client.desktop.presenter.modify.ViewModifierEntry"
          xmlns="http://javafx.com/javafx/8.0.40"
          xmlns:fx="http://javafx.com/fxml/1"
          id="modifierEntryView">

    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints/>
    </columnConstraints>

    <StackPane id="lblModifierWrapper"
               GridPane.rowIndex="0"
               GridPane.columnIndex="0">
        <Label fx:id="lblName"/>
    </StackPane>

    <Label fx:id="lblPrice"
           GridPane.rowIndex="0"
           GridPane.columnIndex="1"/>

</GridPane>