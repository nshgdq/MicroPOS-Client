<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml"
          id="editorWrapper"
          stylesheets="/css/order.css"
          fx:controller="ow.micropos.client.desktop.presenter.order.OrderEditorPresenter">

    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>

    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="75"/>
    </columnConstraints>

    <!-- Order Summary -->
    <GridPane id="gpSalesOrder"
              GridPane.rowIndex="0"
              GridPane.columnIndex="0">

        <rowConstraints>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="ALWAYS"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>

        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <GridPane id="gpTop"
                  GridPane.rowIndex="0"
                  GridPane.columnIndex="0">

            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="NEVER"/>
            </columnConstraints>

            <Label fx:id="info"
                   styleClass="primary-info"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="0"
                   GridPane.columnSpan="2"/>

            <Label fx:id="employee"
                   styleClass="secondary-info"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="0"/>

            <Label fx:id="status"
                   styleClass="secondary-info"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="1"/>

            <Label fx:id="target"
                   styleClass="secondary-info"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="0"/>

            <Label fx:id="time"
                   styleClass="secondary-info"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="1"/>

        </GridPane>

        <AnchorPane GridPane.rowIndex="1"
                    GridPane.columnIndex="0">
            <ListView fx:id="orderEntries"
                      id="lvOrderEntries"
                      AnchorPane.bottomAnchor="0"
                      AnchorPane.leftAnchor="0"
                      AnchorPane.rightAnchor="0"
                      AnchorPane.topAnchor="0"/>
        </AnchorPane>

        <GridPane id="gpScroll"
                  GridPane.rowIndex="2"
                  GridPane.columnIndex="0">

            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints vgrow="NEVER"/>
            </rowConstraints>

            <StackPane fx:id="upOption"
                       id="optionButton"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="0">
                <Label id="smOptionText"
                       text="&#x25B2;"/>
            </StackPane>

            <StackPane fx:id="downOption"
                       id="optionButton"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="1">
                <Label id="smOptionText"
                       text="&#x25BC;"/>
            </StackPane>

        </GridPane>

        <GridPane id="gpBottom"
                  GridPane.rowIndex="3"
                  GridPane.columnIndex="0">

            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="NEVER"/>
            </columnConstraints>

            <Label text="Product Total"
                   styleClass="secondary-info"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="0"/>

            <Label fx:id="productTotal"
                   styleClass="secondary-info"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="1"/>

            <Label text="Discount"
                   styleClass="secondary-info"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="0"/>

            <Label fx:id="chargeTotal"
                   styleClass="secondary-info"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="1"/>

            <Label text="Gratuity"
                   styleClass="secondary-info"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="0"/>

            <Label fx:id="gratuityTotal"
                   styleClass="secondary-info"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="1"/>

            <Label text="Sales Tax"
                   styleClass="secondary-info"
                   GridPane.rowIndex="3"
                   GridPane.columnIndex="0"/>

            <Label fx:id="taxTotal"
                   styleClass="secondary-info"
                   GridPane.rowIndex="3"
                   GridPane.columnIndex="1"/>

            <Label text="Grand Total"
                   styleClass="primary-info"
                   GridPane.rowIndex="4"
                   GridPane.columnIndex="0"/>

            <Label fx:id="grandTotal"
                   styleClass="primary-info"
                   GridPane.rowIndex="4"
                   GridPane.columnIndex="1"/>
        </GridPane>

    </GridPane>

    <!-- Content -->
    <StackPane fx:id="spTabContent"
               GridPane.rowIndex="0"
               GridPane.columnIndex="1"/>

</GridPane>