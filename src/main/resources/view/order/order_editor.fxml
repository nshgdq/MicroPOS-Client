<?xml version="1.0" encoding="UTF-8"?>

<?import email.com.gmail.ttsai0509.javafx.control.GridView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml"
          id="editorWrapper"
          stylesheets="/css/order.css"
          fx:controller="ow.micropos.client.desktop.presenter.order.OrderEditorPresenter">

    <rowConstraints>
        <RowConstraints percentHeight="100"/>
    </rowConstraints>

    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="57"/>
        <ColumnConstraints percentWidth="18"/>
    </columnConstraints>

    <GridPane id="gpSalesOrder"
              GridPane.rowIndex="0"
              GridPane.columnIndex="0">

        <rowConstraints>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="ALWAYS"/>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>

        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <GridPane id="gpTop"
                  GridPane.rowIndex="0"
                  GridPane.columnIndex="0">

            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints hgrow="NEVER"/>
            </columnConstraints>

            <Label fx:id="info"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="0"
                   GridPane.columnSpan="2"/>

            <Label fx:id="employee"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="0"/>

            <Label fx:id="status"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="1"/>

            <Label fx:id="target"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="0"/>

            <Label fx:id="time"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="1"/>

        </GridPane>

        <AnchorPane GridPane.rowIndex="1"
                    GridPane.columnIndex="0">
            <ListView fx:id="orderEntries"
                      id="lvOrderEntries"
                      AnchorPane.bottomAnchor="0"
                      AnchorPane.leftAnchor="0"
                      AnchorPane.rightAnchor="0"
                      AnchorPane.topAnchor="0"/>
        </AnchorPane>

        <GridPane id="gpBottom"
                  GridPane.rowIndex="2"
                  GridPane.columnIndex="0">

            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="NEVER"/>
            </columnConstraints>

            <Label text="Product Total"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="0"/>

            <Label fx:id="productTotal"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="1"/>

            <Label text="Discount"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="0"/>

            <Label fx:id="chargeTotal"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="1"/>

            <Label text="Gratuity"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="0"/>

            <Label fx:id="gratuityTotal"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="1"/>

            <Label text="Sales Tax"
                   GridPane.rowIndex="3"
                   GridPane.columnIndex="0"/>

            <Label fx:id="taxTotal"
                   GridPane.rowIndex="3"
                   GridPane.columnIndex="1"/>

            <Label text="Grand Total"
                   GridPane.rowIndex="4"
                   GridPane.columnIndex="0"/>

            <Label fx:id="grandTotal"
                   GridPane.rowIndex="4"
                   GridPane.columnIndex="1"/>
        </GridPane>

    </GridPane>

    <StackPane fx:id="spItems"
               GridPane.rowIndex="0"
               GridPane.columnIndex="1">
        <GridView fx:id="gvCategories"
                  id="gpCategories"/>
        <GridView fx:id="gvMenuItems"
                  id="gpMenuItems"/>
    </StackPane>

    <VBox id="vbOptions"
          GridPane.rowIndex="0"
          GridPane.columnIndex="2">

        <StackPane fx:id="gratuityOption">
            <Label text="Toggle Gratuity"
                   id="gratuityText"/>
        </StackPane>

        <StackPane fx:id="voidOption">
            <Label text="Void"
                   id="voidText"/>
        </StackPane>

        <StackPane fx:id="printOption">
            <Label text="Print"
                   id="printText"/>
        </StackPane>

        <StackPane fx:id="cancelOption">
            <Label text="Cancel"
                   id="cancelText"/>
        </StackPane>

        <StackPane fx:id="sendOption">
            <Label text="Send"
                   id="sendText"/>
        </StackPane>

        <GridPane id="paging">

            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>

            <StackPane fx:id="backButton"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="0">
                <Label text="&lt;"
                       id="backText"/>
            </StackPane>

            <StackPane fx:id="nextButton"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="1">
                <Label text="&gt;"
                       id="nextText"/>
            </StackPane>

        </GridPane>

    </VBox>

</GridPane>