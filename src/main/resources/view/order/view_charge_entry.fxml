<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="ow.micropos.client.desktop.presenter.order.ViewChargeEntry"
          id="chargeEntryView">

    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="NEVER"/>
    </columnConstraints>

    <Label fx:id="lblChargeName"
           id="lblChargeName"
           GridPane.rowIndex="0"
           GridPane.columnIndex="0"
           GridPane.columnSpan="2"/>

    <Label fx:id="lblChargeStatus"
           id="lblChargeStatus"
           GridPane.rowIndex="1"
           GridPane.columnIndex="0"/>

    <Label fx:id="lblChargeValue"
           id="lblChargeValue"
           GridPane.rowIndex="1"
           GridPane.columnIndex="1"/>

</GridPane>